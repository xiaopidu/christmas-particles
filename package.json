{
  "name": "christmas-particles",
  "version": "1.0.0",
  "description": "❄️ 冰雪奇缘 - 3D 粒子交互系统",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-all": "electron-builder -mwl",
    "dist": "npm run build",
    "release": "electron-builder --publish always"
  },
  "keywords": [
    "christmas",
    "particles",
    "3d",
    "interactive",
    "three.js",
    "mediapipe",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {},
  "build": {
    "appId": "com.yourcompany.christmas-particles",
    "productName": "Christmas Particles",
    "directories": {
      "output": "dist"
    },
    "files": [
      "christmas-particles/**/*",
      "main.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game"
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "christmas-particles"
    }
  }
}